.step1-to-step5__container-1
  %header.step1-to-step5__header
    =link_to '#' do
      = image_tag 'mercari-logo', height:'49',width:'185'
    %nav.progress
      %ul.progress-bar
        %li.through#through
          会員情報
          .progress-status
          .progress-status_bar
        %li.through#through
          電話番号認証
          .progress-status
          .progress-status_bar
        %li.through#through
          お届け先住所入力
          .progress-status
          .progress-status_bar
        %li.active#active.payment
          支払い方法
          .progress-status
          .progress-status_bar
        %li.end#end
          完了
          .progress-status
          .progress-status_bar
  %main.step1-to-step5__main
    %section.container
      %h2.head.registration 支払い方法
      %form.inner{action: "", method: "POST", novalidate: "novalidate"} 
        %input{name: "", type: "hidden", value: ""}/ 
        .single-content
          .form-group
            %label{for: "card_number"} カード番号
            %span.form-require 必須
            %input.input-default{name: "card_number", placeholder: "例) メルカリ太郎", type: "text", value: ""}/
            = image_tag 'card_5brand', height: '30', width:'250'
            = image_tag 'discovercard_logo', height: '30', width:'40'
            = image_tag 'saison', height: '30', width:'30'
          .form-group
            %label{for: "expire"} 有効期限
            %span.form-require 必須
            %br/
            .expire-select-wrap
              .select-wrap
                %select.select-default{name: "month"}
                  %option{value: ""} --
              %span 月
              .select-wrap.select-wrap__month
                %select.select-default{name: "year"}
                  %option{value: ""} --
              %span 年
          .form-group
            %label{for: "security-code"} セキュリティーコード
            %span.form-require 必須
            %input.input-default{name: "security_code", placeholder: "カード背面4桁もしくは3桁の番号", type: "text", value: ""}/
          .text-right
            %p
              = link_to '#', target: "_blank" , class: 'link' do
                カード裏面の番号とは？
          .form-group
          %button.btn-default.btn-red{type: "submit"} 次へ進む
  %footer.step1-to-step5__footer
    = image_tag 'footer-mercari', height: '150', width: '387'